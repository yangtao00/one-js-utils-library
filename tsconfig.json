{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
